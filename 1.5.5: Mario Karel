public class MarioKarel extends Karel
{
//"Defining a method"
private void collectCoins()
{   
   
        turnLeft();
        move();
        move();
        move();
        takeBall();
        takeBall();
        turnLeft();
        turnLeft();
        move();
        move();
        move();
        turnLeft();
}   
   
    public void run()
    
    {
        // "Calling a method"
        move();
        collectCoins();
        move();
        move();
        collectCoins();
        move();
        move();
        collectCoins();
        move();
        move();
        collectCoins();
    }
}
